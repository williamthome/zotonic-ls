{
	"name": "zotonic",
	"displayName": "Zotonic",
	"description": "Zotonic",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.67.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "tpl",
				"aliases": [
					"Zotonic Template Language",
					"tpl"
				],
				"extensions": [
					".tpl"
				],
				"configuration": "./tpl-language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "tpl",
				"scopeName": "source.tpl",
				"path": "./syntaxes/tpl.tmLanguage.json"
			},
			{
				"scopeName": "text.html.tpl",
				"path": "./syntaxes/html-tpl.tmLanguage.json"
			},
			{
				"scopeName": "source.exp.tpl",
				"path": "./syntaxes/exp-tpl.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "14.x",
		"@types/vscode": "^1.67.0",
		"@typescript-eslint/eslint-plugin": "^5.21.0",
		"@typescript-eslint/parser": "^5.21.0",
		"@vscode/test-electron": "^2.1.3",
		"eslint": "^8.14.0",
		"glob": "^8.0.1",
		"mocha": "^9.2.2",
		"typescript": "^4.6.4"
	}
}
