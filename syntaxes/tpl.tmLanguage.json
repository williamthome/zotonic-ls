{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Zotonic",
	"scopeName": "source.tpl",
	"injections": {
		"L:text.html, L:source": {
			"patterns": [
				{
					"include": "#tpl"
				}
			]
		}
	},
	"patterns": [
		{
			"include": "text.html.tpl"
		},
		{
			"include": "#tpl"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"match": "\\b(if|elif|else|endif)\\b",
					"name": "keyword.control.conditional.tpl"
				},
				{
					"match": "\\b(javascript|endjavascript|url)\\b",
					"name": "keyword.other.tag.tpl"
				},
				{
					"match": "debug",
					"name": "keyword.other.debugger.tpl"
				},
				{
					"match": "\\w+",
					"name": "variable.tpl"
				}
			]
		},
		"tpl": {
			"patterns": [
				{
					"name": "comment.tpl",
					"begin": "{#",
					"end": "#}"
				},
				{
					"name": "variable.tpl",
					"begin": "{{",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.variable.begin.tpl"
						}
					},
					"end": "}}",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.block.end.tpl"
						}
					}
				},
				{
					"begin": "({%)(\\s*)(javascript)(\\s*)(%})",
					"beginCaptures": {
						"0": {
							"name": "expression.tpl"
						},
						"1": {
							"name": "punctuation.definition.block.begin.tpl"
						},
						"3": {
							"patterns": [
								{
									"include": "#keywords"
								}
							]
						},
						"5": {
							"name": "punctuation.definition.block.end.tpl"
						}
					},
					"end": "({%)(\\s*)(endjavascript)(\\s*)(%})",
					"endCaptures": {
						"0": {
							"name": "expression.tpl"
						}
					},
					"patterns": [
						{
							"include": "source.js"
						}
					]
				},
				{
					"name": "expression.tpl",
					"begin": "{%",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.block.begin.tpl"
						}
					},
					"end": "%}",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.block.end.tpl"
						}
					},
					"patterns": [
						{
							"include": "#keywords"
						}
					]
				}
			]
		}
	}
}
