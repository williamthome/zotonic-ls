{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Zotonic",
	"scopeName": "source.tpl",
	"injections": {
		"L:text.html, L:source": {
			"patterns": [
				{
					"include": "#tpl"
				}
			]
		},
		"L:meta.tag, L:source.css, L:string": {
			"patterns": [
				{
					"include": "source.exp.tpl"
				}
			]
		}
	},
	"patterns": [
		{
			"include": "source.exp.tpl"
		},
		{
			"include": "text.html.tpl"
		},
		{
			"include": "#tpl"
		}
	],
	"repository": {
		"tpl": {
			"patterns": [
				{
					"name": "comment.line.tpl",
					"begin": "{#",
					"end": "#}"
				},
				{
					"name": "variable.tpl",
					"begin": "{{",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.variable.begin.tpl"
						}
					},
					"end": "}}",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.block.end.tpl"
						}
					}
				},
				{
					"name": "comment.block.tpl",
					"begin": "(?={%\\s*comment\\s*%})",
					"end": ".*?(?:{%\\s*endcomment\\s*%})"
				},
				{
					"begin": "(?<={%\\s*javascript\\s*%})",
					"end": ".*?(?={%\\s*endjavascript\\s*%})",
					"contentName": "source.js",
					"patterns": [
						{
							"include": "source.js"
						}
					]
				}
			]
		}
	}
}
