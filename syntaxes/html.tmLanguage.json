{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Zotonic Template Language",
    "patterns": [
        {
            "include": "#tpl"
        },
        {
            "include": "text.html.derivative"
        }
    ],
    "repository": {
        "tpl": {
            "patterns": [
                {
                    "begin": "\\{% javascript %\\}",
                    "beginCaptures": {
                        "0": {
                            "patterns": [
                                {
                                    "include": "source.tpl"
                                }
                            ]
                        }
                    },
                    "end": "\\{% endjavascript %\\}",
                    "endCaptures": {
                        "0": {
                            "patterns": [
                                {
                                    "include": "source.tpl"
                                }
                            ]
                        }
                    },
                    "name": "source.tpl",
                    "contentName": "source.tpl",
                    "patterns": [
                        {
                            "include": "source.tpl"
                        }
                    ]
                },
                {
                    "begin": "\\{% comment %\\}",
                    "beginCaptures": {
                        "0": {
                            "name": "comment.tpl",
                            "patterns": [
                                {
                                    "match": "{%",
                                    "name": "source.tpl"
                                }
                            ]
                        }
                    },
                    "end": "\\{% endcomment %\\}",
                    "endCaptures": {
                        "0": {
                            "name": "comment.tpl",
                            "patterns": [
                                {
                                    "match": "%}",
                                    "name": "source.tpl"
                                }
                            ]
                        }
                    },
                    "name": "source.tpl",
                    "contentName": "source.tpl",
                    "patterns": [
                        {
                            "include": "source.tpl"
                        }
                    ]
                },
                {
                    "begin": "\\{%",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.block.start.tpl",
                            "patterns": [
                                {
                                    "match": "{%",
                                    "name": "source.tpl"
                                }
                            ]
                        }
                    },
                    "end": "%\\}",
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.block.end.tpl",
                            "patterns": [
                                {
                                    "match": "%}",
                                    "name": "source.tpl"
                                }
                            ]
                        }
                    },
                    "name": "source.tpl",
                    "contentName": "source.tpl",
                    "patterns": [
                        {
                            "include": "source.tpl"
                        }
                    ]
                },
                {
                    "begin": "\\{\\{",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.variable.start.tpl",
                            "patterns": [
                                {
                                    "match": "{{",
                                    "name": "source.tpl"
                                }
                            ]
                        }
                    },
                    "end": "\\}\\}",
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.variable.end.tpl",
                            "patterns": [
                                {
                                    "match": "}}",
                                    "name": "source.tpl"
                                }
                            ]
                        }
                    },
                    "name": "source.tpl",
                    "contentName": "source.tpl",
                    "patterns": [
                        {
                            "include": "source.tpl"
                        }
                    ]
                },
                {
                    "begin": "\\{#",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.comment.start.tpl comment.tpl",
                            "patterns": [
                                {
                                    "match": "{#",
                                    "name": "source.tpl"
                                }
                            ]
                        }
                    },
                    "end": "#\\}",
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.comment.end.tpl comment.tpl",
                            "patterns": [
                                {
                                    "match": "#}",
                                    "name": "source.tpl"
                                }
                            ]
                        }
                    },
                    "name": "source.tpl",
                    "contentName": "source.tpl",
                    "patterns": [
                        {
                            "include": "source.tpl"
                        }
                    ]
                },
                {
                    "begin": "%\\{",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.map.start.tpl",
                            "patterns": [
                                {
                                    "match": "%{",
                                    "name": "source.tpl"
                                }
                            ]
                        }
                    },
                    "end": "\\}",
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.map.end.tpl",
                            "patterns": [
                                {
                                    "match": "}",
                                    "name": "source.tpl"
                                }
                            ]
                        }
                    },
                    "name": "source.tpl",
                    "contentName": "source.tpl",
                    "patterns": [
                        {
                            "include": "source.tpl"
                        }
                    ]
                },
                {
                    "begin": "\\{_",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.translation.start.tpl",
                            "patterns": [
                                {
                                    "match": "{_",
                                    "name": "source.tpl"
                                }
                            ]
                        }
                    },
                    "end": "_\\}",
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.translation.end.tpl",
                            "patterns": [
                                {
                                    "match": "_}",
                                    "name": "source.tpl"
                                }
                            ]
                        }
                    },
                    "name": "source.tpl",
                    "contentName": "source.tpl",
                    "patterns": [
                        {
                            "include": "source.tpl"
                        }
                    ]
                }
            ]
        }
    },
    "scopeName": "text.html.tpl"
}